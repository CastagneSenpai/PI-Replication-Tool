<Window x:Class="Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Viewmodel="clr-namespace:ViewModels"
        mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#36393F"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.DataContext>
        <Viewmodel:ConnectionViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="68*" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="3"
                Background="#252525"
                MouseDown="Border_MouseDown" >


            <Grid HorizontalAlignment="Stretch">
                <Label HorizontalAlignment="Left"
                       Content="PI Server Connection"
                       Foreground="Gray"
                       FontWeight="SemiBold"/>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal" Grid.ColumnSpan="3">


                    <Button Width="20" Height="20" 
                            Content="🗕"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Margin="0 0 0 3"
                            Click="Button_MinimizeClick"/>

                    <Button Width="20" Height="20" 
                            Content="▢"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="WindowsStateButton_Click"/>

                    <Button Width="20" Height="20" 
                            Content="✕"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Gray"
                            FontWeight="Bold"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Background="#2F3136"
              Grid.Row="1"
              Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Content="Connection"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   Margin="8,0,0,0"/>

            <ListView ItemsSource="{Binding Connection}" 
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="0"
                      ItemContainerStyle="{StaticResource ConnectionCard}"/>

            <Label Content="Load Tags Attributes"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   Grid.Row="1"/>

            <ListView ItemsSource="{Binding LoadTagsAttributes}" 
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1"/>

            <Label Content="Push Tags Attributes"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="Gray"
                   Margin="8,0,0,0"
                   Grid.Row="2"/>

            <ListView ItemsSource="{Binding PushTagsAttributes}" 
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="2"/>

        </Grid>
        
        <Grid Grid.Row="1"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                </ColumnDefinition>
                <ColumnDefinition>
                </ColumnDefinition>
                <ColumnDefinition>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="2" Source="/Assets/TotalEnergies.png" Margin="274,0,0,-20" />

        </Grid>

        <Grid Grid.Row="2" Grid.Column="1">
            <ListBox x:Name="listSourceServer" ItemsSource="{Binding ListSourceServer}" SelectedItem="{Binding SelectedSourceServer}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="245" RenderTransformOrigin="0.5,0.5"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2">
            <ListView x:Name="listTargetServer" ItemsSource="{Binding ListTargetServer}" SelectedItem="{Binding SelectedTargetServer}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="245" RenderTransformOrigin="0.5,0.5"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Button 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Command="{Binding ButtonConnectSourceServer}">
                Connect
            </Button>
        </Grid>

        <Button Grid.Row="3" Grid.Column="2"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Command="{Binding ButtonConnectTargetServer}">
            Connect
        </Button>
        
        <Grid Grid.Row="4" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="370"/>
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Row="0" Grid.Column="1">
                <Button Grid.Column="1" Grid.Row="4" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Command="{Binding ButtonContinueNextView}">
                    Continue
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
