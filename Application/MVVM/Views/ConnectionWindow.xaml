<UserControl x:Class="Views.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Viewmodel="clr-namespace:ViewModels" d:DataContext="{d:DesignInstance Type=Viewmodel:ConnectionViewModel}"
             mc:Ignorable="d"
        Height="650" Width="1200"
        Background="#FFFFFF">
    
    <UserControl.DataContext>
        <Viewmodel:ConnectionViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="68*" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <!-- Border = Proprétés de la fenêtre Windows-->
        <Border Grid.ColumnSpan="3"
                Background="#2e86de"
                MouseDown="Border_MouseDown" >

            <Grid HorizontalAlignment="Stretch">
                <Label HorizontalAlignment="Left"
                       Content="PI Replication Tool"
                       Foreground="#FFFFFF"
                       FontWeight="SemiBold"
                       FontSize="13px"/>

                <Label HorizontalAlignment="Center"
                       Content="Connection"
                       Foreground="#FFFFFF"
                       FontWeight="SemiBold"
                       FontSize="13px"/>

                <StackPanel HorizontalAlignment="Right"
                            Orientation="Horizontal" Grid.ColumnSpan="3">

                    <Button Width="20" Height="20" 
                        Content="🗕"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#FFFFFF"
                        FontWeight="Bold"
                        Margin="0 0 0 3"
                        Click="Button_MinimizeClick"/>

                    <Button Width="20" Height="20" 
                        Content="▢"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#FFFFFF"
                        FontWeight="Bold"
                        Click="WindowsStateButton_Click"/>

                    <Button Width="20" Height="20" 
                        Content="✕"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#FFFFFF"
                        FontWeight="Bold"
                        Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Background="#c8d6e5"
              Grid.Row="1"
              Grid.RowSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" 
                   Content="Connection"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="#8395a7"
                   Margin="8,0,0,0"/>
            <ListView Grid.Row="0"
                      ItemsSource="{Binding Connection}" 
                      Background="Transparent"
                      BorderThickness="0"
                      ItemContainerStyle="{StaticResource ConnectionCard}"/>

            <Label Grid.Row="1" 
                   Content="Load Tags Attributes"
                   VerticalAlignment="Center"
                   FontWeight="Medium"
                   Foreground="#8395a7"
                   Margin="8,0,0,0"/>
            <ListView Grid.Row="1"
                      ItemsSource="{Binding LoadTagsAttributes}" 
                      Background="Transparent"
                      BorderThickness="0"/>

            <Label Grid.Row="2"
                    Content="Push Tags Attributes"
                    VerticalAlignment="Center"
                    FontWeight="Medium"
                    Foreground="#8395a7"
                    Margin="8,0,0,0"/>
            <ListView ItemsSource="{Binding PushTagsAttributes}" 
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="2"/>
        </Grid>
        
        <Image Grid.Row="1"  Grid.Column="2" Source="/Assets/TotalEnergies.png" Margin="400,0,0,0" />

        <ListView Grid.Row="2" Grid.Column="1" 
                 x:Name="listSourceServer" 
                 ItemsSource="{Binding ListSourceServer}" 
                 SelectedItem="{Binding SelectedSourceServer}" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Width="245" 
                 RenderTransformOrigin="0.5,0.5"/>

        <ListView Grid.Row ="2" Grid.Column="2" 
                  x:Name="listTargetServer" 
                  ItemsSource="{Binding ListTargetServer}" 
                  SelectedItem="{Binding SelectedTargetServer}" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center" 
                  Width="245" 
                  RenderTransformOrigin="0.5,0.5"/>

        <Button Grid.Row="3" Grid.Column="1"
                Content="Connect"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command="{Binding ButtonConnectSourceServer}">
        </Button>

        <Button Grid.Row="3" Grid.Column="2"
                Content="Connect"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command="{Binding ButtonConnectTargetServer}">
        </Button>
        
        <Button Grid.Row="4" Grid.Column="2"
                Content="Next"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Command="{Binding ButtonNextView}">
        </Button>
    </Grid>
</UserControl>
